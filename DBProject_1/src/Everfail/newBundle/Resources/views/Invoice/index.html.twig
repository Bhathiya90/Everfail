{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Invoice list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Paymentmethod</th>
                <th>Status</th>
                <th>Paymentdate</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('invoice_show', { 'id': entity.id }) }}">{{ entity.paymentMethod }}</a></td>
                <td>{{ entity.status }}</td>
                <td>{% if entity.paymentDate %}{{ entity.paymentDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('invoice_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('invoice_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('invoice_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
